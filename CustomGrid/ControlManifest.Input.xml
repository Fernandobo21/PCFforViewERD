<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="elrincon" constructor="CustomGrid" version="0.0.1" display-name-key="CustomGrid" description-key="CustomGrid description" control-type="standard">
    <!-- dataset node represents a set of entity records on CDS; allow more than one datasets -->
    <data-set name="sampleDataSet" display-name-key="Dataset_Display_Key">
      <property-set name="NameAttribute" display-name-key="StringAttribute" description-key="Name of the tag" of-type="SingleLine.Text" usage="bound" required="true" />
      <property-set name="NumberAttribute" display-name-key="NumberAttribute" description-key="Number that will be transformed in tag size" of-type="Whole.None" usage="bound" required="false" />
    </data-set>
    <property name="gridSelect" display-name-key="Select Grid" description-key="Select Grid" of-type="Enum" usage="bound" required="true">
      <value name="FluentUI" display-name-key="FluentUI" description-key="Render the FluentUI grid" default="true">FluentUI</value>
      <value name="MaterialUI" display-name-key="MaterialUI" description-key="Render the MaterialUI grid" >MaterialUI</value>
    </property>
    <resources>
      <code path="index.ts" order="1"/>
      <!-- UNCOMMENT TO ADD MORE RESOURCES
      <css path="css/CustomGrid.css" order="1" />
      <resx path="strings/CustomGrid.1033.resx" version="1.0.0" />
      -->
    </resources>
  </control>
</manifest>
